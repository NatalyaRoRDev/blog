<% provide(:title, "Забыла пароль") %>
 
<div class="signup-login">
  <h1>Забыли пароль?</h1>
</div>

<div class="row">
  <div class="form_forgotPassword">
  	<%= form_for(:password_reset, 
                 url: password_resets_path) do |f| %>
  	  <div class="fiels_password_reset">
  	    <%= f.label :email, 'Введите ваш email' %><br />
  	    <%= f.email_field :email, :class => 'form_control2' %>
      </div>
      <div class="butnForgot">
  	    <%= f.submit "Отправить", :class => 'btnForgot' %>
  	  </div>
  	<% end %>              
  </div>
</div>