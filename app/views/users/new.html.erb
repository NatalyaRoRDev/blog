<% provide(:title, "Sign Up") %>
<div class="signup">
 <h1>Sign up</h1>
</div>
<div class="row">
  <div class="form">
  	<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
  	  <div class="fiels_signup_name">
  	    <%= f.label :name %><br />
  	    <%= f.text_field :name, :class => "form-control" %>
  	  </div>
      <div class="fiels_signup_email">
  	    <%= f.label :email %><br />
  	    <%= f.email_field :email, :class => "form-control" %>
      </div>
      <div class="fiels_signup_password">
  	    <%= f.label :password %><br />
  	    <%= f.password_field :password, 
  	                         :class => "form-control" %>
      </div>
      <div class="fiels_signup_password2">
  	    <%= f.label :password_confirmation, "Confirmation" %>
        <br />
  	    <%= f.password_field :password_confirmation,
  	                         :class => "form-control" %>
      </div>
      <div class="sbmt">
  	  <%= f.submit "Create my account", 
  	                         :class => "btn" %>
      </div>
  	<% end %>
  </div>
</div>
